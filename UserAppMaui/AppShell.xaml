<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UserAppMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:UserAppMaui.Views">

    <ShellContent Title="Logowanie"  ContentTemplate="{DataTemplate views:LoginPage}"   Route="login" />
    <ShellContent Title="Rejestracja" ContentTemplate="{DataTemplate views:RegisterPage}" Route="register" />
    <ShellContent Title="Profil"     ContentTemplate="{DataTemplate views:ProfilePage}" Route="profile" />

</Shell>
