<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:UserAppMaui.ViewModels"
             x:DataType="vm:LoginViewModel"
             x:Class="UserAppMaui.Views.LoginPage"
             Title="Logowanie">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">
            <Entry Placeholder="E-mail" Text="{Binding Email}" Keyboard="Email" />
            <Entry Placeholder="Hasło" Text="{Binding Password}" IsPassword="True" />
            <Button Text="Zaloguj" Command="{Binding LoginCommand}" IsEnabled="{Binding IsValid}" />
            <Label Text="{Binding Error}" TextColor="Red" />
            <Button Text="Nie masz konta? Zarejestruj się" Command="{Binding GoRegisterCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
