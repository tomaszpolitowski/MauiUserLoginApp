<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UserAppMaui.Views.ProfilePage"
             Title="Mój profil">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="8">
            <Label Text="{Binding FullName}" FontAttributes="Bold" FontSize="18" />
            <Label Text="{Binding Email}" />
            <Label Text="{Binding CreatedAt}" />
            <Button Text="Odśwież" Command="{Binding RefreshCommand}" />
            <Button Text="Wyloguj" Command="{Binding LogoutCommand}" />
            <Label Text="{Binding Error}" TextColor="Red" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
