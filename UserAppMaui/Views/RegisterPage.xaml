<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UserAppMaui.Views.RegisterPage"
             Title="Rejestracja">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">
            <Entry Placeholder="Imię" Text="{Binding FirstName}" />
            <Entry Placeholder="Nazwisko" Text="{Binding LastName}" />
            <Entry Placeholder="E-mail" Text="{Binding Email}" Keyboard="Email" />
            <Entry Placeholder="Hasło" Text="{Binding Password}" IsPassword="True" />
            <Entry Placeholder="Potwierdź hasło" Text="{Binding Confirm}" IsPassword="True" />
            <Button Text="Zarejestruj" Command="{Binding RegisterCommand}" />
            <Label Text="{Binding Error}" TextColor="Red" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
